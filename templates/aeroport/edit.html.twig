{% extends 'base.html.twig' %}

{% block title %}Hello AeroportController!{% endblock %}

{% block body %}
    <div>
        <h1>Modifier Aeroport</h1>
        <form action="/aeroport/update/{{ aeroport.id }}" method="post">
            <div>
                <label for="nom">nom</label>
                <input type="text" name="nom" id="nom" value="{{ aeroport.nom }}">
            </div>

            <div>
                <label for="ville">ville</label>
                <input type="text" name="ville" id="ville" value="{{ aeroport.ville }}">
            </div>
            <button type="submit">modifier</button>
        </form>

        {% for message in app.flashes("error") %}
            <p>{{ message }}</p>
        {% endfor %}
    </div>
{% endblock %}